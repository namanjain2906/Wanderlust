<% layout("/layouts/boilerplate") %>

<style>
  .filter {
    text-align: center;
    margin-right: 1rem;
    opacity: 0.7;
    flex: 0 0 auto;
    scroll-snap-align: center; /* Each item snaps into place */
    min-width: 60px; /* Adjust width as needed */
    padding: 15px;
    /* background: lightgray; */
    border-radius: 8px;
    text-align: center;
    flex: 0 0 auto;
  }
  .filter p {
    font-size: smaller;
  }
  #filters {
    display: flex;
    align-items: center;
    justify-content: center;
    /* margin-bottom: 1rem; */
    display: flex;

    overflow-x: auto; /* Enables horizontal scrolling */
    scroll-snap-type: x mandatory; /* Ensures smooth snap scrolling */
    gap: 10px; /* Space between items */
    padding: 10px;
    white-space: nowrap;
  }
  .filter:hover {
    opacity: 0.9;
    cursor: pointer;
  }
</style>

<body>
  <div id="filters">
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Villa</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
      <p>With pool</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic location</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (listing of allListings){ %>
    <a href="/listings/<%= listing._id %>">
      <div class="card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="Listing-image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
